<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wqa_tv_question"
        android:textSize="@dimen/wca_tv_text_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/wqa_rg_translation"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/wqa_radio_btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"  />

        <RadioButton
            android:id="@+id/wqa_radio_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />

        <RadioButton
            android:id="@+id/wqa_radio_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />
    </RadioGroup>

    <Button
        android:id="@+id/wqa_btn_answer"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wca_btn_answer" />

</LinearLayout>
